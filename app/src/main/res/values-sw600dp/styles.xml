<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="CurrencyPicker">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="rvp_flingFactor">.18</item>
        <item name="rvp_singlePageFling">false</item>
        <item name="rvp_scaleFactor">0.6</item>
        <item name="rvp_triggerOffset">0.1</item>
    </style>

    <style name="Widget.Design.FloatingActionButton.Currency">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:src">@drawable/ic_grade_black_24dp</item>
        <item name="android:tint">@color/fabIconNormal</item>
        <item name="backgroundTint">@color/fabNormal</item>
        <item name="fabSize">auto</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

</resources>